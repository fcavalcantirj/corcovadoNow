#!/bin/bash
# /etc/init.d/camservice

### BEGIN INIT INFO
### END INIT INFO


case "$1" in 
    start)
        echo "Starting camservice"
        ./home/pi/ngrok authtoken 46b4Uk6yjGbVxum9E5WSA_5BTdsiUqfCtRUhSy11mP4
        ./home/pi/ngrok http 80 &
        sudo nohup ./home/pi/corcovadoStream/autoCam.sh &
        ;;
    stop)
        echo "Stopping camservice"
        sudo killall autoCam.sh
        ;;
    *)
        echo "Usage: /etc/init.d/camservice start|stop"
        exit 1
        ;;
esac

exit 0